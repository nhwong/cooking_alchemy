<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recipe</th>
        <th>Time (Local)</th>
        <th>Actions</th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.dish %></td>
        <td><%= recipe.created_at.localtime %></td>
        <td>
          <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">Show</a>
          <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recipes/<%= recipe.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
