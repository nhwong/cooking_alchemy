<%= @ingredients %>

<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <table class="table">
      <tr>
        <th>Query</th>
        <th>Time (Local)</th>
      </tr>
      <% @user_queries.each do |query| %>
      <tr>
          <td>
            <a href="/queries/<%=query.id%>"><%= query.query %></a>
          </td>
          <td><%= query.created_at.localtime %></td>
          <td>
            <a href="/queries/delete/<%=query.id%>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
